# Ghost Hostname Configuration
# Admin interface (accessed via Tailscale VPN)
GHOST_ADMIN_HOSTNAME=blog-admin.example.com

# Public interface (publicly accessible)
GHOST_PUBLIC_HOSTNAME=blog.example.com

# Database Configuration
# Generate strong random passwords for production
DATABASE_ROOT_PASSWORD=your-strong-root-password-here
DATABASE_PASSWORD=your-strong-ghost-db-password-here

# Mail Configuration
# Ghost requires SMTP for user invitations and notifications
MAIL_SERVICE=Mailgun
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=your-mail-username
MAIL_PASSWORD=your-mail-password
MAIL_FROM=noreply@blog.example.com

# Timezone Configuration
TZ=Europe/Zurich
