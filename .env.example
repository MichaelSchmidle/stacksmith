# Domain Configuration
DOMAIN_NAME=portainer.example.com

# Tailscale Configuration
TAILSCALE_INTERFACE=100.64.0.1

# Traefik Configuration
TRAEFIK_CONTAINER_NAME=traefik
TRAEFIK_NETWORK=traefik
HTTP_PORT=80
HTTPS_PORT=443

# Authelia Configuration
AUTHELIA_CONTAINER_NAME=authelia
AUTHELIA_JWT_SECRET=your-jwt-secret-here-32-chars-minimum
AUTHELIA_SESSION_SECRET=your-session-secret-here-32-chars-minimum

# Let's Encrypt Configuration
ACME_EMAIL=your-email@example.com

# Cloudflare API Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here

# SMTP Configuration for Authelia
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SENDER=noreply@example.com

# Duo Two-Factor Authentication
DUO_API_HOSTNAME=api-xxxxxxxx.duosecurity.com
DUO_INTEGRATION_KEY=your-duo-integration-key
DUO_SECRET_KEY=your-duo-secret-key