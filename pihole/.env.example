# Pi-hole Configuration
PIHOLE_HOSTNAME=dns.example.com
PIHOLE_PASSWORD=your-secure-password-here
PIHOLE_WEB_PORT=8080
PIHOLE_DNS_PORT=53

# Upstream DNS Configuration (Pi-hole forwards to these)
PIHOLE_DNS_UPSTREAMS=8.8.8.8;8.8.4.4;1.1.1.1;1.0.0.1
PIHOLE_DNS_SERVERS=8.8.8.8;8.8.4.4

# DHCP is disabled - UniFi gateway handles DHCP
# Configure UniFi to use Pi-hole IP as upstream DNS server

# System Configuration
TZ=America/New_York

# Traefik Integration
TRAEFIK_HOSTNAME=prxy.j2.ms
TRAEFIK_INTERFACE=0.0.0.0

# Let's Encrypt / ACME
ACME_EMAIL=your-email@example.com
CLOUDFLARE_DNS_API_TOKEN=your-cloudflare-api-token

# JumpCloud Authentication Integration  
JUMPCLOUD_AUTH_HOST=jumpcloud-auth
JUMPCLOUD_AUTH_HOSTNAME=auth.example.com