# Pi-hole Configuration
PIHOLE_HOSTNAME=dns.j2.ms
PIHOLE_PASSWORD=your-secure-password-here
PIHOLE_WEB_PORT=8080

# DNS Configuration
PIHOLE_DNS_UPSTREAMS=8.8.8.8;8.8.4.4;1.1.1.1;1.0.0.1
PIHOLE_DNS_SERVERS=8.8.8.8;8.8.4.4

# DHCP Configuration
PIHOLE_DHCP_ACTIVE=true
PIHOLE_DHCP_START=192.168.1.100
PIHOLE_DHCP_END=192.168.1.200
PIHOLE_DHCP_ROUTER=192.168.1.1
PIHOLE_DHCP_LEASETIME=24
PIHOLE_DOMAIN=local
PIHOLE_DHCP_IPV6=false
PIHOLE_DHCP_RAPID_COMMIT=false

# System Configuration
TZ=America/New_York

# Traefik Integration
TRAEFIK_HOSTNAME=prxy.j2.ms
TRAEFIK_INTERFACE=0.0.0.0

# Let's Encrypt / ACME
ACME_EMAIL=your-email@example.com
CLOUDFLARE_DNS_API_TOKEN=your-cloudflare-api-token

# JumpCloud Authentication Integration  
JUMPCLOUD_AUTH_HOST=jumpcloud-auth
JUMPCLOUD_AUTH_HOSTNAME=auth.j2.ms